 class Pause {
    public static void index(int[] a) {
        for (int i = 0; i < a.length; i++) {
            for (int j = i + 1; j < a.length; j++) {
                System.out.println(a[i] + "," + a[j]);
            }
        }
    }        

    public static void main(String[] args){
        int [] a= {10,20,30,40,50};
        index(a);
    }
}
